<!-- Starter Code For HandleBars -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Review App</title>
  <!-- Link to your main stylesheet -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.1.2/css/star-rating.min.css" media="all"
    rel="stylesheet" type="text/css" />
  <link href="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.1.2/themes/krajee-svg/theme.css" media="all"
    rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="/css/styles.css">

</head>

<body>

  <!--
      Top div contains centered title and login/logout button flush right.
      Next level, nav bar contains an add book button and a search field.
      Button: position-absolute top-0 end-0
    -->
  <div class="flex-container">

    <header>

      <div class="clearfix">
        {{#if loggedIn}}
        <button type="button" id="logout" class="btn btn-primary shadow float-end button-width">Logout</button>
        {{else}}
        <button type="button" id="signUp" class="btn btn-primary shadow float-end button-width">Sign Up</button>
        <button type="button" id="login" class="btn btn-primary shadow float-end button-width">Login</button>
        {{/if}}
        <h1 id="banner" class="text-center mb-3">Book Worm Library</h1>
        <hr>

      </div>


      <!-- Optional navigation bar -->
      {{!-- <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
        </ul>
      </nav> --}}



      {{!-- //added nav bar --}}

      <nav class="navbar bg-info-subtle shadow mb-3">
        <div class="container-fluid">

          <button type="button" id="addBook" class="btn btn-primary shadow-sm ">Add Book</button>
          <form class="d-flex" role="search">
            <input class="form-control me-2 shadow-sm" id="searchInputField" type="search" placeholder="Title"
              aria-label="Search">
            {{!-- <button class="btn btn-outline-success" id="search" type="submit">Search</button> --}}

            {{!-- //changed button// --}}
            <button class="btn btn-primary shadow-sm" type="button">Search</button>

          </form>
        </div>
        <hr>
      </nav>
    </header>



    <!-- Main content placeholder -->
    <main>
      {{{body}}}
    </main>

    <!-- Optional footer -->

    

  

  <footer>
      <hr>
      <p>&copy; 2023 Book Review App. All rights reserved.</p>
    </footer>

 </div>

  <!-- Optional JavaScript files -->

  <script src="/js/main.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  {{!-- //added rating script// --}}

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.1.2/js/star-rating.min.js"
    type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.1.2/themes/krajee-svg/theme.js"></script>




</body>

</html>
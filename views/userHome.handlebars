<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}} !</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Review:</h3>
    <div id="main-div"> <!-- Book review area -->
      <div class="bg-light shadow-lg black " id="customContent">
        <h4>To get started...</h4>

        <p>Enter a title in the search box, or click one of the sorting buttons on the left to begin.</p>
        <p>You may also add a book by clicking the "Add Book" button, above.</p>

        <h4>Rating System</h4>

        <label for="input-2" class="control-label"></label>
        <input id="input-2" name="input-2" class="rating rating-loading" data-min="0" data-max="5" data-step="0.1">

        <section class="Book-Info">

          <img id="bookCover" src="" alt="Book Cover">
          <section class="book-cover-info">
            <p id="title"></p>
            <p id="pubDate"></p>
            <p id="authors"></p>
            <p id="pageNum"></p>

          </section>
          <br>
          <section class="book-desc">
            <p id="genre"></p>
            <p id="desc"></p>
          </section>

        </section>
        <form class="form new-review-form">
          <div class="form-group">
            <label for="project-desc">What do you think about this book?:</label>
            <textarea class="form-input" id="review-desc" name="review-desc"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary"> Submit</button>
          </div>
        </form>


      </div>

    </div>
  </div>

  {{#if review.length}}
  <div class="col-md-6 review-list">
    <h3>Current Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/reviews/{{review.id}}">{{review.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{review.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}} !</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Review:</h3>
    <form class="form new-review-form">
      <div class="form-group">
        <label for="book-name">Review For:</label>
        <input class="form-input" type="text" id="book-name" name="book-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">What do you think about this book?:</label>
        <textarea class="form-input" id="review-desc" name="review-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary"> Submit</button>
      </div>
    </form>
  </div>

  {{#if review.length}}
  <div class="col-md-6 review-list">
    <h3>Current Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{review.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
{{#each reviews as |review| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <a href="/review/{{review.id}}">{{review.title}}</a>
        </h2>
        <p>Created by {{review.user.name}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{review.description}}
        </p>
    </div>
</div>
{{/each}}